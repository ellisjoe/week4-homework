<style>
  h1 {
    border-bottom: solid 3px gray;
    margin-bottom: 24px;
  }
</style>

<p><%= link_to "Add a New Place", places_new_url %></p>

<ul>

  <% @places.each do |place| %>
    <li>
      <%= link_to place.title, places_show_url(place.id) %>
      (<%= number_to_currency(place.price / 100) %>)
      <%= link_to "(delete)", places_destroy_url(place.id), :method => 'delete' %>
    </li>
  <% end %>

</ul>
